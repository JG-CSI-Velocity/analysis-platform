# ARS Presentation Style -- matplotlib rcParams
# Usage: plt.style.use('ars.mplstyle')

figure.figsize     : 14, 7
figure.facecolor   : white
figure.dpi         : 150

axes.facecolor     : white
axes.grid          : true
axes.grid.which    : major
axes.spines.top    : false
axes.spines.right  : false
axes.spines.left   : false
axes.spines.bottom : false
axes.labelsize     : 20
axes.titlesize     : 24
axes.titleweight   : bold

grid.color         : 0.92
grid.linestyle     : -
grid.linewidth     : 0.8

xtick.labelsize    : 18
ytick.labelsize    : 18

legend.fontsize    : 16
legend.frameon     : false

font.size          : 14
